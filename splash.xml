<theme>
	<formatVersion>7</formatVersion>
	<view name="splash">
		<splash name="splash">
			<backgroundColor>111111</backgroundColor>
		</splash>
		<image name="logo">
			<path>./_inc/images/systems/logos/${system.theme}.svg</path>
			<size>0.90 0.90</size>
		</image>
		<image name="background">
			<!-- Leave default for better OS/device portability -->
		</image>
		<image name="progressbar">
			<color>333333</color>
			<colorEnd>333333</colorEnd>
			<roundCorners>0.01</roundCorners>
		</image>
		<image name="progressbar:active">
			<color>777777</color>
			<colorEnd>777777</colorEnd>
		</image>
		<text name="label">
			<alignment>center</alignment>
			<fontPath>._inc/fonts/Gogh-ExtraBold.otf</fontPath>
			<fontSize>0.04</fontSize>
			<color>ffffff</color>
		</text>
	</view>
</theme>
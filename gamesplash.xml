<theme>
<formatVersion>7</formatVersion>
	<view name="splash">
		<splash name="splash">
			<backgroundColor>000000FF</backgroundColor>
		</splash>

		<image name="background">
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<minSize>1 1</minSize>
			<roundCorners>0</roundCorners>
			<linearSmooth>false</linearSmooth>
			<color>ffffff</color>
			<colorEnd>404040</colorEnd>
			<gradientType>vertical</gradientType>
			<zIndex>1</zIndex>
		</image>

		<text name="loading" extra="true">
			<text>LOADING...</text>
			<text lang="fr">CHARGEMENT...</text>
			<origin>0 0.5</origin>
			<pos>0.05 0.9</pos>
			<alignment>left</alignment>
			<color>dddddd</color>
			<fontPath>./_inc/fonts/Neuropolitical-Regular.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<glowColor>09090920</glowColor>
			<glowSize>1</glowSize>
			<glowOffset>1</glowOffset>
		</text>

		<text name="label">
			<origin>0 0.5</origin>
			<pos>0.05 0.95</pos>
			<alignment>left</alignment>
			<color>dddddd</color>
			<fontPath>./_inc/fonts/Gogh-ExtraBold.otf</fontPath>
			<fontSize>0.032</fontSize>
			<glowColor>09090920</glowColor>
			<glowSize>1</glowSize>
			<glowOffset>1</glowOffset>
		</text>

	</view>

</theme>